- top = @i == 1 ? 'top' : ''
%div{:class => "office fields_holder #{top}"}
  - @i += 1
  - f.inputs "", :class => "fields reminder hide_custom" do
    = f.input :service_reminder, :collection => @service_reminders, :prompt => "Select #{@company.sub_s} Type", :wrapper_html => {:class => 'float_left'}, :input_html => {:title => "Select #{@company.sub_s} Type", :onchange => 'select_reminder(this)'}, :label => false
    = f.input :appointment_date, :as => :string, :wrapper_html => {:class => 'float_left'}, :input_html => {:class => 'datetimepicker', :title => 'Set Date and Time'}, :label => false

    %li.left= link_to_function "Remove #{@company.sub_s}", "remove_fields(this)", :class => 'remove_button'

    %li &nbsp;
    = f.input :custom_name, :wrapper_html => {:class => 'custom'}, :input_html => {:title => ''}
    = f.input :custom_email_subject, :wrapper_html => {:class => 'custom'}, :input_html => {:title => ''}
    = f.input :custom_email_body, :wrapper_html => {:class => 'custom'}, :input_html => {:title => ''}

    = f.hidden_field :_destroy

:javascript
  $('fieldset.fields input[type=text]').watermark();
  $('.datetimepicker').datetimepicker({
    changeMonth: true,
    changeYear: true,
    showOtherMonths: true,
    selectOtherMonths: true,
    dateFormat: 'yy-mm-dd',
    minDate: new Date(y, m, d, 8, 30)
  });
