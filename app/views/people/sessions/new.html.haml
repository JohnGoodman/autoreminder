%h2 Sign in
.content.login
  = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form login'}) do |f|
    - flash.each do |type, message|
      .flash
        .message.error
          %p= message
    .group.clearfix
      .left
        = f.label :username, :class => "label right"
      .right
        = f.text_field :username, :class => "text_field"
    .group.clearfix
      .left
        = f.label :password, :class => "label right"
      .right
        = f.password_field :password, :class => "text_field"
    .group.navform.clearfix
      .right
        = content_tag :button, 'Login', {:type => :submit, :class => 'positive'}
