- content_for(:secondary_navigation) do
  = render 'people/nav'

= render 'people/title'
- if @company.company_type_id == 1
  %h2 Add #{@company.reminder_title} to #{@vehicle.name}
- elsif @company.company_type_id == 2
  %h2 Add #{@company.reminder_title} to #{@pet.name}
- elsif @company.company_type_id == 3
  / %h2 Add #{@company.reminder_title} to #{@person.name}
  %h2 Add #{@company.reminder_title}
- elsif @company.company_type_id == 4
  / %h2 Add #{@company.reminder_title} to #{@person.name}
  %h2 Add #{@company.reminder_title}


= render 'form'
