- semantic_form_for [@store, @person, @vehicle] do |form|
  = render "shared/form_errors", :errors => @vehicle.errors

  - form.inputs "General Information", :class => "" do
    = form.input :year
    = form.input :make
    = form.input :model
    = form.input :email, :input_html => {:value => @default_email}
    = form.input :unsubscribe, :as => :normal_boolean, :label => 'Unsubscribe from receiving emails.'
    = submit_button 'Vehicle'
    .or-cancel
      or #{link_to 'Cancel', store_person_path(@store, @person)}
