- semantic_form_for [@store, @email] do |form|
  = render "shared/form_errors", :errors => @email.errors

  - form.inputs "", :class => "" do
    = form.input :subject
    = form.input :body
    = form.input :preview_to, :input_html => {:value => current_person.email}, :hint => 'Email address to send a preview to'
  - form.buttons do
    = content_tag :button, 'Save', {:type => :submit, :class => 'positive', :name => 'save', :value => true}
    = content_tag :button, 'Preview', {:type => :button, :class => 'positive', :name => 'preview', :value => true}
    .right
      = content_tag :button, 'Save & Send', {:type => :submit, :class => 'positive', :name => 'save_send', :value => true}
      = content_tag :button, 'Send', {:type => :submit, :class => 'positive', :name => 'send', :value => true}

    .or-cancel
      or #{link_to 'Cancel', store_emails_path(@store) }
