- content_for(:secondary_navigation) do
  = render 'company/companies/nav'

%h1.left Store Employees
= link_to 'New Employee', new_company_person_path, :class => 'button positive right'
.clear

%table.table
  %thead
    %tr
      %th Username
      %th Name
      %th Email
      %th Store

  %tbody
    - @people.each do |person|
      %tr
        %td= link_to person.username, edit_company_person_path(person)
        %td= person.name
        %td= person.email
        %td= person.store.name
