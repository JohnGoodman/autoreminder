.secondary-navigation.clearfix
  = tabs_tag :namespace => :subnav do |tab|
    - if ['index', 'new', 'create'].exclude?(controller.action_name)
      = tab.person_show  'Person Overview', office_person_path(@store, @person), :class => 'first'
      = tab.person_edit  'Edit Person', edit_office_person_path(@store, @person)


    = tab.person_new   'Add Customer', new_office_person_path, :class => "right last" if ['index','new','create'].include?(controller.action_name) && ['people'].include?(controller.controller_name)

    = tab.customer_service_reminder_new   'Add Appointment', new_office_person_customer_service_reminder_path(@store, @person), :class => "right last" if ['create','new'].include?(controller.action_name) && ['customer_service_reminders'].include?(controller.controller_name)