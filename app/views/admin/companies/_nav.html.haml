.secondary-navigation.clearfix
  = tabs_tag :namespace => :subnav do |tab|
    = tab.company_show  'Company Overview', admin_company_path(@company), :class => "first" if ['show','edit'].include?(controller.action_name) || controller.controller_name == 'stores'
    = tab.company_edit  'Edit Company', edit_admin_company_path(@company) if ['edit','update','show'].include?(controller.action_name) || controller.controller_name == 'stores'
    = tab.company_stores  'Stores', admin_company_stores_path(@company) if ['edit','update','show'].include?(controller.action_name) || controller.controller_name == 'stores'

    = tab.company_new   'New Company', new_admin_company_path, :class => "right last" if ['index','new'].include?(controller.action_name) && controller.controller_name == 'companies'
    = tab.store_new   'Add Store', new_admin_company_store_path, :class => "right last" if ['index','new'].include?(controller.action_name) && controller.controller_name == 'stores'
