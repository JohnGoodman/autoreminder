- content_for(:secondary_navigation) do
  = render 'admin/companies/nav'

%h1 People

%table.table
  %thead
    %tr
      %th Name
      %th Email
      %th Role

  %tbody
    - @people.each do |person|
      %tr
        %td= link_to person.name, edit_admin_company_person_path(@company, person)
        %td= person.email
        %td= person.role.name
